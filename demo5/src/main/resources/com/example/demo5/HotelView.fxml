<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo5.view.HotelView" spacing="10" alignment="CENTER">

    <TableView fx:id="tableView" prefHeight="200" prefWidth="400">
        <columns>
            <TableColumn fx:id="colNume" text="Nume" />
            <TableColumn fx:id="colAdresa" text="Adresa" />
            <TableColumn fx:id="colNrCamere" text="Nr. Camere" />
        </columns>
    </TableView>


    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtNume" promptText="Nume" />
        <TextField fx:id="txtAdresa" promptText="Adresa" />
        <TextField fx:id="txtNrCamere" promptText="Nr. Camere" />
    </HBox>


    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnAdd" text="Adaugă" />
        <Button fx:id="btnUpdate" text="Actualizează" />
        <Button fx:id="btnDelete" text="Șterge"/>
    </HBox>



    <Label fx:id="lblMesaj" />
</VBox>