<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo5.view.CameraView" spacing="10" alignment="CENTER">
    <TableView fx:id="tableView" prefHeight="200" prefWidth="400">
        <columns>
            <TableColumn fx:id="colIdHotel" text="ID Hotel" />
            <TableColumn fx:id="colNumarCamera" text="Număr Cameră" />
            <TableColumn fx:id="colPret" text="Preț" />
            <TableColumn fx:id="colFacilitati" text="Facilități" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtIdHotel" promptText="ID Hotel" />
        <TextField fx:id="txtNumarCamera" promptText="Număr Cameră" />
        <TextField fx:id="txtPret" promptText="Preț" />
        <TextField fx:id="txtFacilitati" promptText="Facilități" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <DatePicker fx:id="dpCheckIn" promptText="Check-In" />
        <DatePicker fx:id="dpCheckOut" promptText="Check-Out" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnAdd" text="Adaugă" />
        <Button fx:id="btnUpdate" text="Actualizează" />
        <Button fx:id="btnDelete" text="Șterge" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnShowAvailable" text="Afișează Disponibile" />
        <Button fx:id="btnSaveCsv" text="Salvează CSV" />
        <Button fx:id="btnSaveDoc" text="Salvează DOC" />
        <Button fx:id="btnShowHotelRooms" text="Afișează Camere Hotel" />
    </HBox>

    <Label fx:id="lblMesaj" />
</VBox>